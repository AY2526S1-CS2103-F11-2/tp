<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: transparent; -fx-border-color: #3c3c3c; -fx-border-width: 0 0 1 0;"
      minHeight="60" prefHeight="70">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <!-- Student ID + Name -->
      <ColumnConstraints hgrow="NEVER" minWidth="110" prefWidth="110" maxWidth="110" />
      <!-- Role -->
      <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="80" maxWidth="80" />
      <!-- Class -->
      <ColumnConstraints hgrow="NEVER" minWidth="140" prefWidth="140" maxWidth="140" />
      <!-- Phone + Email -->
      <ColumnConstraints hgrow="NEVER" minWidth="180" prefWidth="180" maxWidth="180" />
      <!-- Address -->
      <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
      <!-- Attendance -->
      <ColumnConstraints hgrow="NEVER" minWidth="90" prefWidth="90" maxWidth="90" />
      <!-- Payment Status -->
      <ColumnConstraints hgrow="NEVER" minWidth="90" prefWidth="90" maxWidth="90" />
    </columnConstraints>

    <!-- Column 1: Student ID + Name -->
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0" spacing="2">
      <padding>
        <Insets top="8" right="8" bottom="8" left="10" />
      </padding>
      <Label fx:id="id" />
      <Label fx:id="name" text="\$name" wrapText="false" maxWidth="100" />
    </VBox>

    <!-- Column 2: Role -->
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
      <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
      </padding>
      <Label fx:id="role" text="\$role" />
    </VBox>

    <!-- Column 3: Classes -->
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="2" spacing="3">
      <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
      </padding>
      <FlowPane fx:id="classes" hgap="6" vgap="3" maxWidth="130" />
      <FlowPane fx:id="tags" hgap="4" vgap="2" maxWidth="130" />
    </VBox>

    <!-- Column 4: Phone + Email -->
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="3" spacing="3">
      <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
      </padding>
      <Label fx:id="phone" text="\$phone" maxWidth="170" wrapText="false" />
      <Label fx:id="email" text="\$email" maxWidth="170" wrapText="false" />
    </VBox>

    <!-- Column 5: Address -->
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="4">
      <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
      </padding>
      <Label fx:id="address" text="\$address" wrapText="true" maxHeight="50" />
    </VBox>

    <!-- Column 6: Attendance -->
    <VBox alignment="CENTER" GridPane.columnIndex="5">
      <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
      </padding>
      <Label fx:id="attendance" text="\$attendance" />
    </VBox>

    <!-- Column 7: Payment Status -->
    <VBox alignment="CENTER" GridPane.columnIndex="6">
      <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
      </padding>
      <Label fx:id="paymentStatus" text="\$status" />
    </VBox>
  </GridPane>
</HBox>
